<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1800"
        motion:motionInterpolator="easeOut">
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="7"
                motion:framePosition="100"
                motion:motionTarget="@+id/logoImageView" />
            <KeyAttribute
                android:scaleY="7"
                motion:framePosition="100"
                motion:motionTarget="@+id/logoImageView" />
            <KeyAttribute
                android:rotation="45"
                motion:framePosition="50"
                motion:motionTarget="@+id/earthImageView" />
            <KeyCycle
                android:rotation="0"
                motion:framePosition="40"
                motion:motionTarget="@+id/logoImageView"
                motion:waveOffset="0"
                motion:wavePeriod="1" />
            <KeyCycle
                android:rotation="8"
                motion:framePosition="100"
                motion:motionTarget="@+id/logoImageView"
                motion:waveOffset="0"
                motion:wavePeriod="8" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/logoImageView"
            android:layout_width="@dimen/act_splash_logo_size"
            android:layout_height="@dimen/act_splash_logo_size"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/logoImageView"
            android:layout_width="@dimen/act_splash_logo_size"
            android:layout_height="@dimen/act_splash_logo_size"
            android:layout_marginBottom="@dimen/huge_margin"
            motion:layout_constraintBottom_toTopOf="@+id/earthImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

</MotionScene>