<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActiveBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/orbitron_medium</item>
    </style>

    <style name="InactiveBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/orbitron_regular</item>
    </style>

    <style name="LightTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/orbitron_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="RegularTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/orbitron_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="BoldTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

</resources>