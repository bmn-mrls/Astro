<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="RegularTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="MediumTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="BoldTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="LightButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="strokeColor">@color/white</item>
    </style>

</resources>